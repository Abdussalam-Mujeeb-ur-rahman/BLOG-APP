<%- include('../partials/..header.ejs') %>

    <div class="container">
      <h1 class="mb4 txt-cnt pd-10">BLOG SITE</h1>
      <div class="flex-row j-center">
      <a href="/" class="pd-10 bg-green green-blue-hover ft-size-18 txt-cnt clr">Get All Articles</a>
      </div>


      <form action="/articles/getArticleBySearch" method="post" class="mb4 txt-cnt pd-10">
        <fieldset>
          <legend class="ft-size-18 bold">Search</legend>
          <div style="margin: 5px;">
            <label for="author" class="ft-size-18 bold">Author</label><br>
            <input type="text" name="author" id="author" style="width: 60%; padding: 5px;" class="ft-size-18"><br>
          </div>
          <div style="margin: 5px;">
            <label for="title" class="ft-size-18 bold">Title</label><br>
            <input type="text" name="title" id="title" style="width: 60%; padding: 5px;" class="ft-size-18"><br>
          </div>
          <div style="margin: 5px;">
            <label for="tag" class="ft-size-18 bold">Tag</label><br>
            <input type="text" name="tag" id="tag" style="width: 60%; padding: 5px;" class="ft-size-18"><br>
          </div>
          <div style="margin: 5px;">
            <button type="submit" class="pd-10 bg-green green-blue-hover txt-cnt clr b-o-none">Search</button>
          </div>

        </fieldset>
      </form>

    </div>

    <%- include('../partials/..footer.ejs') %>