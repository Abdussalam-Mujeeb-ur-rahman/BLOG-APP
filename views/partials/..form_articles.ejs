<form action="/articles/createNewArticle" method="post">
    <div class="mb4 mt10">
        <label for="title" class="bold ft-size-18">Title</label><br/>
        <input type="text" name="title" id="title" required placeholder="title of your article" value="<%= article.title %>" minlength="10" class="ft-size-18 pd-10 b-o-none wd300"/><br/>
    </div><br>
    <div class="mb4 mt10">
        <select name="tags" id="tags" multiple class="ft-size-18 pd-10 wd300" required>
            <option value="music">music</option>
            <option value="politics">politics</option>
            <option value="programming">programming</option>
            <option value="technology">technology</option> 
            </select>
    </div>
    <div class="mb4 mt10">
        <label for="description" class="bold ft-size-18">Description</label><br/>
        <textarea name="description" id="description" required placeholder="description of your article" class="ft-size-18 pd-10 wd300" minlength="20"><%= article.description %></textarea><br/>
    </div><br>
    <div class="mb4 mt10">
        <label for="details" class="bold ft-size-18">Details</label><br/>
        <textarea name="details" id="details" placeholder="in markdown language" rows="20" cols="20" required class="ft-size-18 pd-10 wd300" minlength="50"><%= article.details %></textarea><br/>
    </div><br>
    <div class="mb4 mt10">
        <button class="pd-10 bg-green green-blue-hover ft-size-18 txt-cnt clr b-o-none" id="cancel">Cancel</button>
        <button type="submit" class="pd-10 bg-green green-blue-hover ft-size-18 txt-cnt clr b-o-none">Save</button>
    </div>
 </form>

 <script>
    const cancel = document.getElementById('cancel')

    cancel.addEventListener('click', (e) => {
        history.back()
    })
 </script>